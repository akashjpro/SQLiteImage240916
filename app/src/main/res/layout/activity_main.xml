<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.akashjpro.sqliteimage240916.MainActivity"
    android:weightSum="10"
    android:padding="10dp"
    android:background="#09f1a4">

    <Button
        android:layout_marginTop="10dp"
        android:layout_weight="2"
        android:textSize="20sp"
        android:background="@drawable/button_background_format"
        android:textColor="@drawable/button_format"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm Mới"
        android:id="@+id/buttonThem1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_weight="2"
        android:textSize="20sp"
        android:background="@drawable/button_background_format"
        android:textColor="@drawable/button_format"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xem Danh Dách"
        android:id="@+id/buttonDS"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
</LinearLayout>
