<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.akashjpro.sqliteimage240916.ThemDongVat"
    android:background="#77cacd">

    <ImageButton
        android:scaleType="fitXY"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageButtonCamera"
        android:src="@drawable/camera"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:scaleType="fitXY"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageButtonFolder"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/folders" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageViewHinh"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/noimg" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextTen"
        android:layout_below="@+id/imageViewHinh"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="NhapTen" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextMoTa"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Nhap mo ta" />

    <Button
        android:paddingRight="10dp"
        android:background="@drawable/button_background1_format"
        android:drawableLeft="@drawable/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm Mới"
        android:id="@+id/buttonThemDongVat"
        android:layout_below="@+id/editTextMoTa"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp" />
</RelativeLayout>
